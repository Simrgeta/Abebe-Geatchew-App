<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#1854DC"
            android:centerColor="#12306F"
            android:endColor="#003075"
            android:angle="270"/>
        </shape>
    </item>
    <!-- Soft top highlight -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="180"/>
        </shape>
    </item>
</layer-list>
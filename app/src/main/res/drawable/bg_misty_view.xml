<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#36000000" /> <!-- semi-transparent black shadow -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main background with border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C9E87CF4" /> <!-- semi-transparent background -->
            <stroke android:width="2dp" android:color="#ED59FF" /> <!-- border -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>

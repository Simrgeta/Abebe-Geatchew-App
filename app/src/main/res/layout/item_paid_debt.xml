<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="4dp">

    <!-- Collapsed Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Checkbox (hidden until multi-select mode is enabled) -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:background="@null"
            android:layout_marginEnd="6dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutCollapsedCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/bg_row_table">

            <LinearLayout
                android:id="@+id/layoutCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Borrower's name -->
                <TextView
                    android:id="@+id/tvBorrower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"/>

                <!-- Remaining debt under the name -->
                <TextView
                    android:id="@+id/tvAmountPaidCollapsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/md_grey_600"
                    android:fontFamily="@font/poppins_medium"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvDateCollapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Aug 2025"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Expanded Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/bg_card_expanded">

        <LinearLayout
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tvRepaymentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Aug 2025"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:fontFamily="@font/poppins_regular"/>

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_round_close_24"
                    app:tint="@color/text_secondary"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                app:dividerColor="@color/divider"/>

            <!-- Amount owed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/primary"
                    android:src="@drawable/ic_money"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvAmountOwed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owed: 1500"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

            <!-- Amount paid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/primary"
                    android:src="@drawable/ic_paid"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvAmountRepaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid: 500"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

            <!-- Reason -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_reason"
                    app:tint="@color/primary"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason: Loan for car repair"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>

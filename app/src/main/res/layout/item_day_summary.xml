<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header: Date + checkbox + expand icon -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/rounded_card_bg_selector"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="15 Aug 2025"
            android:textSize="16sp"
            android:textColor="#A24444"
            android:fontFamily="@font/poppins_bold"/>

        <ImageView
            android:id="@+id/expandIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_more"
            app:tint="#FF9800"/>
    </LinearLayout>

    <!-- Expandable Content -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_container_bg2"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp">

        <!-- Incomes Section -->
        <TextView
            android:id="@+id/tvIncomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIncomes"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@drawable/rounded_container_bg"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Expenses Section -->
        <TextView
            android:id="@+id/tvExpenseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expenses"
            android:textSize="14sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/rounded_container_bg"
            android:nestedScrollingEnabled="false"/>

        <!-- Net Amount -->
        <TextView
            android:id="@+id/tvNetAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net: 500 ETB"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>

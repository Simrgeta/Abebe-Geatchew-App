<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_debt_gradient">

    <!-- Decorative blobs -->
    <ImageView
        android:id="@+id/blobTopLeft"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:translationX="-60dp"
        android:translationY="-40dp"
        android:alpha="0.25"
        android:src="@drawable/shape_blob_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blobBottomRight"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:translationX="60dp"
        android:translationY="40dp"
        android:alpha="0.20"
        android:src="@drawable/shape_blob_cyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Paid Debts"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_round_arrow_back_24"
        android:background="@android:color/transparent">

        <!-- Action Buttons -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:src="@drawable/ic_round_delete_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/onCardLow"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Card containing SearchView + RecyclerView + Placeholder -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/card_glass"
        app:cardCornerRadius="22dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/LargeSmooth">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- SearchView -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:queryHint="Search paid debts..."
                app:iconifiedByDefault="false"
                android:background="@drawable/search_background"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- RecyclerView for paid debts -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPaidDebts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:padding="4dp"
                android:scrollbars="vertical"/>

            <!-- Placeholder shown when no data -->
            <LinearLayout
                android:id="@+id/placeholderCard"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No paid debts found"
                    android:textColor="@color/onCardHigh"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You havenâ€™t recorded any repayments yet."
                    android:textColor="@color/onCardLow"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

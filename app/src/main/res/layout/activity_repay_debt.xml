<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_debt_gradient"
    tools:context=".RepayDebt">

    <!-- Decorative gradient blobs -->
    <ImageView
        android:id="@+id/blobTopLeft"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:translationX="-60dp"
        android:translationY="-40dp"
        android:alpha="0.25"
        android:src="@drawable/shape_blob_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blobBottomRight"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:translationX="60dp"
        android:translationY="40dp"
        android:alpha="0.20"
        android:src="@drawable/shape_blob_cyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Repay Debt"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_round_arrow_back_24" />

    <!-- Floating Lottie badge -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieBadge"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/repay_debt" />

    <!-- Frosted Card container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/lottieBadge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/card_glass"
        app:cardCornerRadius="22dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/LargeSmooth">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/cardScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Title & subtitle -->
                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Repay Debt"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/onCardHigh" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settle debts easily and keep track of repayments."
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/onCardLow" />

                <!-- Debt Id (disabled) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDebtId"
                    style="@style/Widget.My.TextInputLayout.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:startIconDrawable="@drawable/ic_round_tag_24"
                    app:hintTextColor="@color/hintColor"
                    app:boxStrokeColor="@color/boxStroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDebtId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Debt ID"
                        android:enabled="false"
                        android:focusable="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Borrower Name (disabled) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBorrower"
                    style="@style/Widget.My.TextInputLayout.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:startIconDrawable="@drawable/ic_round_person_24"
                    app:hintTextColor="@color/hintColor"
                    app:boxStrokeColor="@color/boxStroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBorrower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Borrower name"
                        android:enabled="false"
                        android:focusable="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Amount to Repay -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRepayAmount"
                    style="@style/Widget.My.TextInputLayout.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:startIconDrawable="@drawable/ic_round_currency_24"
                    app:prefixText="ETB"
                    app:hintTextColor="@color/hintColor"
                    app:boxStrokeColor="@color/boxStroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRepayAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount to repay"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Repayment Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRepayDate"
                    style="@style/Widget.My.TextInputLayout.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:startIconDrawable="@drawable/ic_round_calendar_24"
                    app:endIconDrawable="@drawable/ic_round_event_24"
                    app:endIconContentDescription="Pick date"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/hintColor"
                    app:boxStrokeColor="@color/boxStroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRepayDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Repayment date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spacer -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Submit button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRepayDebt"
                    style="@style/Widget.My.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Repay Debt"
                    android:layout_marginTop="6dp"
                    android:onClick="submitRepayment"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:icon="@drawable/ic_repay_debt"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp" />

                <!-- Tiny safe note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your repayment will be stored securely."
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/onCardLow"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

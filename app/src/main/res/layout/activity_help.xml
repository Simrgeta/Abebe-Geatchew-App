<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_help_gradient"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_white"
        android:src="@drawable/ic_round_arrow_back_24"
        android:contentDescription="Back"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvHelpTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Help &amp; Support"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollHelp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvHelpTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Section: Getting Started -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#3C000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvGettingStartedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Getting Started"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tvGettingStartedContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn how to create an account, log in, and navigate the app."
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section: FAQs (Collapsible) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#3C000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- FAQ Header -->
                    <LinearLayout
                        android:id="@+id/faqHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvFAQTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Frequently Asked Questions"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/ivFAQArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                            app:tint="#FFFFFF"/>
                    </LinearLayout>

                    <!-- FAQ Content (Initially hidden) -->
                    <LinearLayout
                        android:id="@+id/faqContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Q1: Why canâ€™t I log in?\nA1: Check your internet connection and try again."
                            android:textColor="#FFFFFF"
                            android:lineSpacingExtra="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Q2: How do I reset my password?\nA2: Use the 'Forgot Password' option on login screen."
                            android:textColor="#FFFFFF"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Q3: Can I use the app offline?\nA3: Yes, core features work offline but cloud sync requires internet."
                            android:textColor="#FFFFFF"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Feedback -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                android:backgroundTint="#3C000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvFeedbackTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback &amp; Suggestions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tvFeedbackContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your suggestions help us improve! Tap the Feedback button to share your thoughts."
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
